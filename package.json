{
  "name": "adn",
  "version": "1.0.0",
  "scripts": {
    "dev": "npx tailwindcss -i ./src/css/input.css -o ./dist/output.css --watch",
    "build:css": "npx tailwindcss -i ./src/css/input.css -o ./dist/output.css --minify",
    "build:copy": "copyfiles -u 1 \"src/**/*.{html,js,json,png,jpg,svg,gif,ico,otf,ttf,woff,woff2}\" dist",
    "build": "npm-run-all build:copy build:css"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  }
}